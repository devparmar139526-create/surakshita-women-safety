# =============================================================================
# Surakshita Women Safety Analytics - Environment Configuration
# =============================================================================
# IMPORTANT: Copy this file to .env and update with your values
# Never commit .env to version control!

# Environment
# Options: development, production, testing
FLASK_ENV=development

# Security - SECRET_KEY
# CRITICAL: Generate a secure random key for production
# Run: python -c "import secrets; print(secrets.token_hex(32))"
# Must be set in production! Application will warn if missing.
SECRET_KEY=change-this-to-a-secure-random-64-char-hex-string-in-production-use-secrets-token-hex

# Session Configuration
# Session timeout in seconds (default: 1800 = 30 minutes)
SESSION_TIMEOUT=1800
# Force HTTPS cookies in production (set to True in production)
SESSION_COOKIE_SECURE=False

# Rate Limiting
# Use Redis in production: redis://localhost:6379
# Use in-memory for development: memory://
RATELIMIT_STORAGE_URL=memory://

# =============================================================================
# Production Checklist:
# 1. Set FLASK_ENV=production
# 2. Generate and set a strong SECRET_KEY
# 3. Set SESSION_COOKIE_SECURE=True (requires HTTPS)
# 4. Configure Redis for RATELIMIT_STORAGE_URL (recommended)
# =============================================================================
